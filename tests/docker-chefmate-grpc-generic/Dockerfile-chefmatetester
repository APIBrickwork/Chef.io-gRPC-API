FROM node
MAINTAINER Tobias Freundorfer, https://github.com/tfreundo

RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y git && \
    apt-get install -y netcat

# Install nodeunit project globally
RUN npm --quiet install -g nodeunit

# Add user
RUN useradd -ms /bin/bash tester

USER tester
WORKDIR /home/tester

# Clone APIAdapter repo
RUN git clone https://github.com/APIBrickwork/Chef.io-gRPC-API.git

# Install all necessary modules using npm
RUN export NODE_PATH=$NODEPATH:/home/tester/Chef.io-gRPC-API.git/tests/testscripts-chefmate-grpc-generic
WORKDIR /home/tester/Chef.io-gRPC-API.git/tests/testscripts-chefmate-grpc-generic
RUN npm --quiet install

# Start Unit-Tests
CMD ["sh", "startUnitTests.sh"]
